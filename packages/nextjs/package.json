{
  "name": "@micro-stacks/nextjs",
  "private": false,
  "version": "0.0.1",
  "description": "Opinionated React integration for micro-stacks.",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "main": "./dist/index.mjs",
      "module": "./dist/index.mjs",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "require": "./dist/*.js",
      "main": "./dist/*.js",
      "module": "./dist/*.mjs",
      "import": "./dist/*.mjs"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "shx rm -rf ./dist && bob-esbuild tsc && bob-esbuild build",
    "typecheck": "tsc --noEmit --target esnext",
    "dev:publish": "yalc publish --push",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "lint:prettier": "prettier --check \"src/**/*.{ts,tsx}\" *.js",
    "lint:prettier:fix": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=12"
  },
  "prettier": "@stacks/prettier-config",
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aulneau/micro-stacks.git"
  },
  "keywords": [
    "stacks",
    "web3",
    "small-bundle"
  ],
  "author": "Thomas Osmonson",
  "contributors": [],
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/fungible-systems/micro-stacks-react/issues"
  },
  "homepage": "https://github.com/fungible-systems/micro-stacks",
  "devDependencies": {
    "@stacks/stacks-blockchain-api-types": "0.70.0",
    "@types/common-tags": "1.8.1",
    "@types/jest": "27.0.2",
    "@types/jsdom": "16.2.13",
    "@types/randombytes": "2.0.0",
    "@types/react": "17.0.31",
    "@types/react-dom": "17.0.10"
  },
  "dependencies": {
    "micro-stacks": "0.0.36",
    "jotai": "1.4.2",
    "jotai-query-toolkit": "^0.1.13",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "next": "12.0.1",
    "nookies": "^2.5.2"
  }
}
