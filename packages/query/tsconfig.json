{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@micro-stacks/react": [
        "../react/src"
      ],
      "react-query": [
        "node_modules/react-query/"
      ],
      "jotai": [
        "node_modules/jotai/"
      ],
      "jotai/*": [
        "node_modules/jotai/*"
      ]
    }
  },
  "references": [
    {
      "path": "../react/tsconfig.json"
    }
  ],
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
